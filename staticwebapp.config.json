{
  "routes": [
    {
      "route": "/assets/*",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate, max-age=0"
      }
    },
    {
      "route": "/*",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate, max-age=0",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/static/*", "/*.{png,jpg,gif,svg,ico}"]
  },
  "mimeTypes": {
    ".json": "text/json",
    ".js": "text/javascript"
  }
}